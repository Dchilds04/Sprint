<body>
  <nav>
    <a href="dashboard.html">Dashboard</a>
    <a href="goals.html">Goals</a>
    <a href="achievements.html">Achievements</a>
    <a href="index.html" onclick="logout()">Logout</a>
  </nav>

  <div class="container">
    <h1>Achievements</h1>
    <div id="achievementList"></div>
  </div>

  <script>
    if (!localStorage.getItem('currentUser')) {
      window.location.href = 'index.html';
    }

    function logout() {
      localStorage.removeItem('currentUser');
    }

    const goals = JSON.parse(localStorage.getItem('goals')) || [];
    const finances = JSON.parse(localStorage.getItem('finances')) || {};
    const achievements = [];
    const completeGoals = goals.filter(g => g.progress >= 100);

    // Goal-based achievements
    if (completeGoals.length >= 1) achievements.push({ text: "üèÜ First Goal Achieved!", badge: "https://img.icons8.com/emoji/48/trophy-emoji.png" });
    if (completeGoals.length >= 3) achievements.push({ text: "üéØ Triple Goal Master!", badge: "https://img.icons8.com/emoji/48/check-mark-emoji.png" });
    if (goals.length >= 5) achievements.push({ text: "üìò Long-Term Visionary", badge: "https://img.icons8.com/emoji/48/star-emoji.png" });

    // Finance-based achievements
    if (finances.totalSaved >= 500) achievements.push({ text: "üíµ Saved $500!", badge: "https://img.icons8.com/color/48/money.png" });
    if (finances.totalSaved >= 1000) achievements.push({ text: "üí∞ Saved $1,000!", badge: "https://img.icons8.com/color/48/banknotes.png" });
    if (finances.totalSaved >= 5000) achievements.push({ text: "üè¶ Saved $5,000!", badge: "https://img.icons8.com/color/48/safe.png" });

    const list = document.getElementById('achievementList');
    if (achievements.length === 0) {
      list.innerHTML = '<p>No achievements yet. Keep working toward your goals!</p>';
    } else {
      achievements.forEach(a => {
        list.innerHTML += `<div class='achievement'><img class='badge' src='${a.badge}' alt='badge'>${a.text}</div>`;
      });
    }
  </script>
</body>
